::
:: Perform tests
::
set STATUS=0
do testargs in @CON:
   gosub :RUNTEST %testargs
   if %RUNTEST EQ FAIL set STATUS=1
enddo

::
:: Ensure test status returned
::
gosub :EXIT %STATUS

::
:: Subroutines
::
:RUNTEST [name cmpop expcode expvalue cut*]
   echo %name %cmpop %expcode %expvalue
   echos %cut
   set RUNTEST=FAIL
return

:EXIT [code]
   quit %code
return

